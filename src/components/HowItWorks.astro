---
const installUrl = "#"; // Will be replaced with actual Shopify App Store URL

const steps = [
  {
    number: "1",
    title: "Install",
    description: "Install our app from Shopify App Store. Takes 30 seconds.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>`,
  },
  {
    number: "2",
    title: "Configure",
    description: "Select your target languages and set up brand term protection.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>`,
  },
  {
    number: "3",
    title: "Translate",
    description: "Click translate and watch the magic happen. That's it!",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>`,
  },
];
---

<section id="how-it-works" class="bg-gray-50 py-20 lg:py-24">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        How it works
      </h2>
      <p class="text-lg text-gray-600">
        Get started in just 3 simple steps
      </p>
    </div>

    <!-- Steps -->
    <div class="relative">
      <!-- Desktop Connector Line -->
      <div class="hidden lg:block absolute top-24 left-1/2 -translate-x-1/2 w-2/3 h-0.5 bg-gradient-to-r from-blue-500 to-emerald-500"></div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-8">
        {steps.map((step, index) => (
          <div class="relative text-center">
            <!-- Step Number -->
            <div
              class="w-12 h-12 mx-auto mb-6 rounded-full flex items-center justify-center text-white text-2xl font-bold"
              style="background: linear-gradient(135deg, #3b82f6 0%, #10b981 100%);"
            >
              {step.number}
            </div>

            <!-- Icon -->
            <div class="w-16 h-16 mx-auto mb-4 rounded-xl bg-white shadow-sm border border-gray-100 flex items-center justify-center text-emerald-600">
              <Fragment set:html={step.icon} />
            </div>

            <!-- Title -->
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {step.title}
            </h3>

            <!-- Description -->
            <p class="text-gray-600 leading-relaxed max-w-xs mx-auto">
              {step.description}
            </p>

            <!-- Connector Arrow (Mobile) -->
            {index < steps.length - 1 && (
              <div class="lg:hidden flex justify-center my-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                </svg>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a
        href={installUrl}
        class="inline-flex items-center gap-2 btn btn-primary"
      >
        Get Started
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>
