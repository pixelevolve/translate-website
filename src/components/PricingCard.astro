---
interface Feature {
  text: string;
  included: boolean;
}

interface Props {
  tier: string;
  price: string;
  tagline: string;
  features: Feature[];
  buttonText: string;
  buttonStyle: "ghost" | "emerald" | "blue";
  isFeatured?: boolean;
  badge?: string;
}

const {
  tier,
  price,
  tagline,
  features,
  buttonText,
  buttonStyle,
  isFeatured = false,
  badge,
} = Astro.props;

const installUrl = "#"; // Will be replaced with actual Shopify App Store URL

const buttonClasses = {
  ghost: "btn btn-ghost w-full",
  emerald: "btn btn-primary w-full",
  blue: "btn btn-blue w-full",
};
---

<div
  class:list={[
    "pricing-card relative bg-white rounded-2xl p-8",
    isFeatured
      ? "border-2 border-emerald-500 shadow-lg shadow-emerald-500/10"
      : "border border-gray-200",
  ]}
>
  {/* Badge */}
  {badge && (
    <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-emerald-500 text-white text-xs font-semibold px-4 py-1 rounded-full uppercase tracking-wide">
      {badge}
    </div>
  )}

  {/* Tier Name */}
  <h3 class="text-xl font-semibold text-gray-900 mb-2">{tier}</h3>

  {/* Price */}
  <div class="mb-2">
    <span class="text-4xl font-bold text-gray-900">{price}</span>
    <span class="text-gray-500">/mo</span>
  </div>

  {/* Tagline */}
  <p class="text-gray-600 mb-6">{tagline}</p>

  {/* Divider */}
  <hr class="border-gray-200 mb-6" />

  {/* Features */}
  <ul class="space-y-4 mb-8">
    {features.map((feature) => (
      <li class="flex items-start gap-3">
        {feature.included ? (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-emerald-500 flex-shrink-0 mt-0.5"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        ) : (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-gray-300 flex-shrink-0 mt-0.5"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        )}
        <span class:list={[feature.included ? "text-gray-700" : "text-gray-400"]}>
          {feature.text}
        </span>
      </li>
    ))}
  </ul>

  {/* Button */}
  <a href={installUrl} class={buttonClasses[buttonStyle]}>
    {buttonText}
  </a>
</div>
