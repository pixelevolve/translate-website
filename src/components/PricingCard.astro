---
interface Feature {
  text: string;
  included: boolean;
}

interface Props {
  tier: string;
  price: string;
  tagline: string;
  features: Feature[];
  buttonText: string;
  buttonStyle: "ghost" | "emerald" | "blue" | "purple" | "indigo";
  isFeatured?: boolean;
  badge?: string;
}

const {
  tier,
  price,
  tagline,
  features,
  buttonText,
  buttonStyle,
  isFeatured = false,
  badge,
} = Astro.props;

const installUrl = "#"; // Will be replaced with actual Shopify App Store URL
const contactUrl = "mailto:enterprise@pixel-evolve.com?subject=SmartLang Enterprise Inquiry";

const buttonClasses = {
  ghost: "btn btn-ghost w-full",
  emerald: "btn btn-primary w-full",
  blue: "btn btn-blue w-full",
  purple: "btn btn-purple w-full",
  indigo: "btn btn-indigo w-full",
};

const isEnterprise = tier === "Enterprise";
---

<div
  class:list={[
    "pricing-card relative bg-white rounded-2xl p-6 h-full flex flex-col",
    isFeatured
      ? "border-2 border-purple-500 shadow-lg shadow-purple-500/10"
      : "border border-gray-200",
  ]}
>
  {/* Badge */}
  {badge && (
    <div class:list={[
      "absolute -top-3 left-1/2 -translate-x-1/2 text-white text-xs font-semibold px-4 py-1 rounded-full uppercase tracking-wide",
      isFeatured ? "bg-purple-500" : "bg-gray-500"
    ]}>
      {badge}
    </div>
  )}

  {/* Tier Name */}
  <h3 class="text-xl font-semibold text-gray-900 mb-2">{tier}</h3>

  {/* Price */}
  <div class="mb-2">
    <span class="text-4xl font-bold text-gray-900">{price}</span>
    {!isEnterprise && <span class="text-gray-500">/mo</span>}
    {isEnterprise && <span class="text-gray-500 text-base ml-1">pricing</span>}
  </div>

  {/* Tagline */}
  <p class="text-gray-600 mb-4">{tagline}</p>

  {/* Divider */}
  <hr class="border-gray-200 mb-4" />

  {/* Features */}
  <ul class="space-y-3 mb-6 flex-grow">
    {features.map((feature) => (
      <li class="flex items-start gap-2">
        {feature.included ? (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class:list={[
              "h-5 w-5 flex-shrink-0 mt-0.5",
              isFeatured ? "text-purple-500" : "text-emerald-500"
            ]}
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        ) : (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-gray-300 flex-shrink-0 mt-0.5"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        )}
        <span class:list={[
          "text-sm",
          feature.included ? "text-gray-700" : "text-gray-400"
        ]}>
          {feature.text}
        </span>
      </li>
    ))}
  </ul>

  {/* Button */}
  <a href={isEnterprise ? contactUrl : installUrl} class={buttonClasses[buttonStyle]}>
    {buttonText}
  </a>
</div>
