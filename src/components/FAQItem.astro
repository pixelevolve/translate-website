---
interface Props {
  question: string;
  answer: string;
  defaultOpen?: boolean;
}

const { question, answer, defaultOpen = false } = Astro.props;
---

<div class:list={["faq-item", defaultOpen && "open"]}>
  <button
    type="button"
    class="faq-question w-full text-left"
    aria-expanded={defaultOpen ? "true" : "false"}
  >
    <span class="pr-4">{question}</span>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="faq-icon h-5 w-5 text-gray-500 flex-shrink-0"
      viewBox="0 0 20 20"
      fill="currentColor"
    >
      <path
        fill-rule="evenodd"
        d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
        clip-rule="evenodd"
      />
    </svg>
  </button>
  <div class="faq-answer">
    <p>{answer}</p>
  </div>
</div>
