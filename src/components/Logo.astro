---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<a href="/" class:list={["flex items-center gap-3 group", className]}>
  <!-- Logo Icon - Globe with translation -->
  <div class="relative flex items-center justify-center w-9 h-9 rounded-lg bg-gradient-to-br from-emerald-500 to-teal-600 shadow-md shadow-emerald-500/20 group-hover:shadow-emerald-500/30 transition-shadow">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="1.5">
      <circle cx="12" cy="12" r="9" />
      <path d="M12 3c-2.5 3-4 6.5-4 9s1.5 6 4 9c2.5-3 4-6.5 4-9s-1.5-6-4-9z" />
      <path d="M3 12h18" />
    </svg>
  </div>

  <!-- Logo Text - Single line with subtle branding -->
  <div class="flex items-baseline gap-1.5">
    <span class="text-[15px] font-semibold text-gray-900 group-hover:text-emerald-600 transition-colors">
      SmartLang
    </span>
    <span class="text-xs text-gray-400">
      by
      <a
        href="https://pixel-evolve.com"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-400 hover:text-emerald-500 transition-colors"
        onclick="event.stopPropagation()"
      >PixelEvolve</a>
    </span>
  </div>
</a>
