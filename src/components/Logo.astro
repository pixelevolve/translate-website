---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<a href="/" class:list={["flex items-center gap-2", className]}>
  <!-- Logo Icon -->
  <div class="flex items-center justify-center w-8 h-8">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="w-6 h-6">
      <circle cx="16" cy="16" r="14" fill="#10b981"/>
      <path d="M10 16h12M16 10v12" stroke="white" stroke-width="2" stroke-linecap="round"/>
      <circle cx="16" cy="16" r="6" stroke="white" stroke-width="2" fill="none"/>
    </svg>
  </div>

  <!-- Logo Text -->
  <div class="flex flex-col">
    <span class="text-lg font-semibold text-gray-900 leading-tight">
      Shopify AI Translator
    </span>
    <a
      href="https://pixel-evolve.com"
      target="_blank"
      rel="noopener noreferrer"
      class="text-xs text-gray-500 hover:text-emerald-600 transition-colors leading-tight"
    >
      by PixelEvolve
    </a>
  </div>
</a>
