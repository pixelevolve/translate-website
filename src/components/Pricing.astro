---
import PricingCard from "./PricingCard.astro";

const plans = [
  {
    tier: "Free",
    price: "$0",
    tagline: "Perfect for trying out",
    features: [
      { text: "1 language", included: true },
      { text: "200 products", included: true },
      { text: "Basic glossary (10 terms)", included: true },
      { text: "Email support", included: true },
      { text: "Batch translation", included: false },
    ],
    buttonText: "Start Free",
    buttonStyle: "ghost" as const,
    isFeatured: false,
  },
  {
    tier: "Basic",
    price: "$19",
    tagline: "For starting stores",
    badge: "⭐ BEST VALUE",
    features: [
      { text: "2 languages", included: true },
      { text: "500 products", included: true },
      { text: "Full glossary (50 terms)", included: true },
      { text: "Email support", included: true },
      { text: "Batch translation", included: true },
    ],
    buttonText: "Choose Basic",
    buttonStyle: "emerald" as const,
    isFeatured: true,
  },
  {
    tier: "Pro",
    price: "$49",
    tagline: "For growing stores",
    features: [
      { text: "5 languages", included: true },
      { text: "Unlimited products", included: true },
      { text: "Full glossary (unlimited)", included: true },
      { text: "Priority queue", included: true },
      { text: "Priority support", included: true },
      { text: "Batch translation", included: true },
      { text: "API access", included: true },
    ],
    buttonText: "Go Pro",
    buttonStyle: "blue" as const,
    isFeatured: false,
  },
];

const includedFeatures = [
  "AI translation",
  "Brand protection",
  "Automatic sync",
  "Quality validation",
  "SEO-friendly hreflang support",
];
---

<section id="pricing" class="bg-white py-20 lg:py-24">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Simple, transparent pricing
      </h2>
      <p class="text-lg text-gray-600">
        No hidden fees. No complicated tiers. Just results.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
      {/* Mobile: Reorder to show Basic first */}
      <div class="lg:hidden order-1">
        <PricingCard {...plans[1]} />
      </div>
      <div class="lg:hidden order-2">
        <PricingCard {...plans[2]} />
      </div>
      <div class="lg:hidden order-3">
        <PricingCard {...plans[0]} />
      </div>

      {/* Desktop: Normal order */}
      {plans.map((plan) => (
        <div class="hidden lg:block">
          <PricingCard {...plan} />
        </div>
      ))}
    </div>

    <!-- All Plans Include -->
    <div class="text-center">
      <p class="text-gray-600 mb-4">All plans include:</p>
      <div class="flex flex-wrap justify-center gap-x-6 gap-y-2 text-sm text-gray-500">
        {includedFeatures.map((feature, index) => (
          <span class="flex items-center gap-1">
            {feature}
            {index < includedFeatures.length - 1 && (
              <span class="hidden sm:inline ml-6">•</span>
            )}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
