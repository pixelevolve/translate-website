---
import PricingCard from "./PricingCard.astro";

const plans = [
  {
    tier: "Free",
    price: "$0",
    tagline: "Perfect for trying out",
    features: [
      { text: "1 target language", included: true },
      { text: "200 products/month", included: true },
      { text: "10 glossary terms", included: true },
      { text: "30-day history", included: true },
      { text: "Batch translation", included: false },
    ],
    buttonText: "Start Free",
    buttonStyle: "ghost" as const,
    isFeatured: false,
  },
  {
    tier: "Basic",
    price: "$19",
    tagline: "For growing stores",
    features: [
      { text: "2 target languages", included: true },
      { text: "500 products/month", included: true },
      { text: "50 glossary terms", included: true },
      { text: "90-day history", included: true },
      { text: "Batch translation", included: true },
    ],
    buttonText: "Start 7-Day Trial",
    buttonStyle: "blue" as const,
    isFeatured: false,
  },
  {
    tier: "Pro",
    price: "$49",
    tagline: "Most popular choice",
    badge: "ðŸ’Ž RECOMMENDED",
    features: [
      { text: "Up to 10 languages", included: true },
      { text: "Unlimited products", included: true },
      { text: "1,000 glossary terms", included: true },
      { text: "Unlimited history", included: true },
      { text: "Priority support", included: true },
    ],
    buttonText: "Start 7-Day Trial",
    buttonStyle: "purple" as const,
    isFeatured: true,
  },
  {
    tier: "Enterprise",
    price: "Custom",
    tagline: "For large operations",
    features: [
      { text: "Unlimited languages", included: true },
      { text: "Unlimited products", included: true },
      { text: "Unlimited glossary", included: true },
      { text: "Dedicated account manager", included: true },
      { text: "Custom integrations & SLA", included: true },
    ],
    buttonText: "Contact Sales",
    buttonStyle: "indigo" as const,
    isFeatured: false,
  },
];

const includedFeatures = [
  "AI translation",
  "Brand protection",
  "Automatic sync",
  "Quality validation",
  "SEO-friendly hreflang support",
];
---

<section id="pricing" class="bg-white py-20 lg:py-24">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        Simple, transparent pricing
      </h2>
      <p class="text-lg text-gray-600">
        No hidden fees. No complicated tiers. Just results.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 mb-12">
      {/* Mobile: Reorder to show Pro first */}
      <div class="md:hidden order-1">
        <PricingCard {...plans[2]} />
      </div>
      <div class="md:hidden order-2">
        <PricingCard {...plans[1]} />
      </div>
      <div class="md:hidden order-3">
        <PricingCard {...plans[3]} />
      </div>
      <div class="md:hidden order-4">
        <PricingCard {...plans[0]} />
      </div>

      {/* Desktop: Normal order */}
      {plans.map((plan) => (
        <div class="hidden md:block">
          <PricingCard {...plan} />
        </div>
      ))}
    </div>

    <!-- All Plans Include -->
    <div class="text-center">
      <p class="text-gray-600 mb-4">All plans include:</p>
      <div class="flex flex-wrap justify-center gap-x-6 gap-y-2 text-sm text-gray-500">
        {includedFeatures.map((feature, index) => (
          <span class="flex items-center gap-1">
            {feature}
            {index < includedFeatures.length - 1 && (
              <span class="hidden sm:inline ml-6">â€¢</span>
            )}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
